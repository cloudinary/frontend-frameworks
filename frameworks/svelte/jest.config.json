{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "bail": true,
  "transform": {
    "^.+\\.svelte$": [
      "svelte-jester",
      {
        "preprocess": true
      }
    ],
    "^.+\\.js$": "babel-jest",
    "^.+\\.ts$": "ts-jest"
  },
  "moduleFileExtensions": [
    "js",
    "ts",
    "svelte"
  ],
  "testMatch": [
    "**/__tests__/**/*.test.+(ts|js)"
  ],
  "setupFilesAfterEnv": [
    "@testing-library/jest-dom/extend-expect"
  ],
  "modulePaths": [
    "<rootDir>/src"
  ],
  "collectCoverage": false,
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts",
    "<rootDir>/src/**/*.svelte"
  ],
  "coverageDirectory": "<rootDir>/coverage",
  "coverageReporters": [
    "lcov","text"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 40,
      "functions": 80,
      "lines": 95,
      "statements": 95
    }
  },
  "globals": {
    "ts-jest": {
      "diagnostics": false
    }
  },
  "transformIgnorePatterns": [
    "node_modules/(?!@cloudinary/base|@cloudinary/html)"
  ]
}
