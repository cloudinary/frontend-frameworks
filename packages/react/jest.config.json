{
  "preset": "ts-jest",
  "bail": true,
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.ts"
  ],
  "transform": {
    "^.+\\.(js|ts|tsx)$": "ts-jest",
    "^.+\\.(js|jsx|ts|tsx)$": "babel-jest",
    "node_modules/@cloudinary/html": "babel-jest"
  },
  "testEnvironment": "jsdom",
  "resolver": "<rootDir>/src/internal/jest-ts-resolver.cjs",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "modulePaths": [
    "<rootDir>/src"
  ],
  "testPathIgnorePatterns": [
    "./__tests__/testUtils"
  ],
  "snapshotSerializers": ["enzyme-to-json/serializer"],
  "coverageThreshold": {
    "global": {
      "branches": 95,
      "functions": 95,
      "lines": 95,
      "statements": 95
    }
  },
  "globals": {
    "ts-jest": {
      "diagnostics": false
    }
  },
  "transformIgnorePatterns": [
    "!node_modules/",
    "<rootDir>/node_modules/(?!@cloudinary/url-gen/)",
    "<rootDir>/node_modules/(?!@cloudinary/html/)"

  ],
  "setupFilesAfterEnv": [
    "./src/setupTests.js"
  ]
}

